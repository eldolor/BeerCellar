<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<Button android:id="@+id/done" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="5dp"
		android:layout_marginTop="20dp" android:text="@string/done_label"
		android:padding="10dp" android:gravity="center_vertical" />
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_below="@id/done"
		android:layout_marginTop="20dp" android:layout_height="fill_parent">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<View android:id="@+id/divider0" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp" />
			
			<TextView android:id="@+id/select_white_balance"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_white_balance_label"
				android:textStyle="bold" android:layout_below="@+id/divider0" />
			<TextView android:id="@+id/current_white_balance"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_white_balance"/>
			
			<View android:id="@+id/divider1" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/current_white_balance" />
			
			<TextView android:id="@+id/select_antibanding"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_antibanding_label"
				android:textStyle="bold" android:layout_below="@+id/divider1" />
			<TextView android:id="@+id/current_antibanding"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_antibanding"/>
			
			<View android:id="@+id/divider2" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/current_antibanding" />

			<TextView android:id="@+id/select_color_effect"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_color_effect_label"
				android:textStyle="bold" android:layout_below="@+id/divider2" />
			<TextView android:id="@+id/current_color_effect"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_color_effect"/>
			
			<View android:id="@+id/divider3" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/current_color_effect" />
				
			<TextView android:id="@+id/select_flash_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_flash_mode_label"
				android:textStyle="bold" android:layout_below="@+id/divider3" />
			<TextView android:id="@+id/current_flash_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_flash_mode"/>
			
			<View android:id="@+id/divider4" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/current_flash_mode" />
				
			<TextView android:id="@+id/select_focus_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_focus_mode_label"
				android:textStyle="bold" android:layout_below="@+id/divider4" />
			<TextView android:id="@+id/current_focus_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_focus_mode"/>
			
			<View android:id="@+id/divider5" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/current_focus_mode" />
				
			<TextView android:id="@+id/select_scene_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/select_scene_mode_label"
				android:textStyle="bold" android:layout_below="@+id/divider5" />
			<TextView android:id="@+id/current_scene_mode"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="left" android:layout_below="@+id/select_scene_mode"/>
			

		</RelativeLayout>
	</ScrollView>
</RelativeLayout>