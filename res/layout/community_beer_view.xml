<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/header"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/favorites" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12sp"
			android:gravity="center_vertical" android:layout_alignParentLeft="true"
			android:layout_marginTop="10dp" />
		<com.cm.beer.util.FacebookLikeButtonWebView
			android:id="@+id/facebook_like_webview" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="20dp"
			android:layout_toRightOf="@+id/favorites" android:gravity="center_vertical"
			android:layout_marginTop="12dp" />
	</RelativeLayout>
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@+id/header">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ImageView android:id="@+id/thumbnail"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="10dp" android:layout_marginLeft="5dp" />
			<RatingBar android:id="@+id/rating"
				style="?android:attr/ratingBarStyleIndicator" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@+id/thumbnail"
				android:layout_marginLeft="5dp" android:layout_marginTop="10dp"
				android:gravity="center_vertical" />
			<LinearLayout android:id="@+id/user_profile_header"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:layout_marginLeft="5dp"
				android:gravity="left" android:layout_marginTop="30dp"
				android:layout_below="@+id/rating" android:visibility="gone">
				<TextView android:id="@+id/reviewed_by_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/community_beer_reviewed_by"
					android:textStyle="bold" />
				<Button android:id="@+id/view_user_profile"
					android:layout_width="wrap_content" android:layout_marginLeft="30dp"
					android:layout_height="wrap_content" android:text="@string/community_view_user_profile_label"
					android:gravity="center_vertical" android:layout_alignParentRight="true" />
			</LinearLayout>
			<View android:id="@+id/divider_reviewed_by" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/user_profile_header" />
			<TextView android:id="@+id/reviewed_by"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:layout_below="@+id/divider_reviewed_by"
				android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
				android:gravity="center_vertical" android:textSize="18sp" />
			<TextView android:id="@+id/reviewed_by_review_count"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:layout_below="@+id/reviewed_by" android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp" android:gravity="center_vertical"
				android:textSize="18sp" />
			<TextView android:id="@+id/follow_count"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:layout_below="@+id/reviewed_by_review_count"
				android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
				android:gravity="center_vertical" android:textSize="18sp" />
			<Button android:id="@+id/follow_reviewer"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/follow_count" android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp" android:gravity="center_vertical" />
			<!--
				<TextView android:id="@+id/following_reviewer_message"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_below="@+id/follow_reviewer"
				android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
				android:gravity="center_vertical" android:textSize="18sp"
				android:visibility="gone" />
			-->

			<TextView android:id="@+id/date_created_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/follow_reviewer"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="center_vertical" />
			<TextView android:id="@+id/date_updated_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/date_created_label"
				android:layout_marginLeft="5dp" android:layout_marginTop="2dp"
				android:gravity="center_vertical" />

			<View android:id="@+id/divider1" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/date_updated_label" />

			<TextView android:id="@+id/beer_label" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_below="@+id/divider1"
				android:layout_marginLeft="5dp" android:layout_marginTop="50dp"
				android:gravity="left" android:text="@string/community_beer_beer_label"
				android:textStyle="bold" />
			<View android:id="@+id/divider2" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/beer_label" />
			<TextView android:id="@+id/beer" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider2" />


			<LinearLayout android:id="@+id/characteristics_header"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="horizontal" android:layout_marginLeft="5dp"
				android:gravity="left" android:layout_marginTop="30dp"
				android:layout_below="@+id/beer">
				<TextView android:id="@+id/characteristics_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/characteristics_header_label"
					android:textStyle="bold" />
				<Button android:id="@+id/translate_characteristics"
					android:layout_width="wrap_content" android:layout_marginLeft="30dp"
					android:layout_height="wrap_content" android:text="@string/translate_label"
					android:gravity="center_vertical" />
			</LinearLayout>
			<View android:id="@+id/divider_characteristics"
				android:background="@drawable/divider" android:layout_width="fill_parent"
				android:layout_height="1dp" android:layout_below="@+id/characteristics_header" />
			<TableLayout android:id="@+id/characteristics_table"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shrinkColumns="1" android:layout_below="@+id/divider_characteristics">
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/color_label" android:text="@string/color_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/color"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/clarity_label" android:text="@string/clarity_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/clarity"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/foam_label" android:text="@string/foam_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/foam" android:layout_marginTop="15dp"
						android:layout_height="wrap_content" android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp" android:visibility="gone"
						android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/aroma_label" android:text="@string/aroma_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/aroma"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/mouthfeel_label" android:text="@string/mouthfeel_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/mouthfeel"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/body_label" android:text="@string/body_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/body" android:layout_marginTop="15dp"
						android:layout_height="wrap_content" android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp" android:visibility="gone"
						android:textSize="22sp" />
				</TableRow>
				<TableRow android:layout_height="wrap_content">
					<TextView android:id="@+id/aftertaste_label" android:text="@string/aftertaste_label"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" />
					<TextView android:id="@+id/aftertaste"
						android:layout_marginTop="15dp" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
						android:visibility="gone" android:textSize="22sp" />
				</TableRow>
			</TableLayout>

			<TextView android:id="@+id/alcohol_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/characteristics_table"
				android:layout_marginLeft="5dp" android:layout_marginTop="30dp"
				android:gravity="left" android:text="@string/community_beer_alcohol_label"
				android:textStyle="bold" />
			<View android:id="@+id/divider3" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/alcohol_label" />
			<TextView android:id="@+id/alcohol" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider3" />

			<TextView android:id="@+id/price_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/alcohol" android:layout_marginTop="30dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:text="@string/community_beer_price_label" android:textStyle="bold" />
			<View android:id="@+id/divider4" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/price_label" />
			<TextView android:id="@+id/price" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider4" />

			<TextView android:id="@+id/style_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/price" android:layout_marginLeft="5dp"
				android:layout_marginTop="30dp" android:gravity="left"
				android:text="@string/community_beer_style_label" android:textStyle="bold" />
			<View android:id="@+id/divider5" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/style_label" />
			<TextView android:id="@+id/style" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider5" />

			<TextView android:id="@+id/brewery_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/style" android:layout_marginLeft="5dp"
				android:layout_marginTop="30dp" android:gravity="left"
				android:text="@string/community_beer_brewery_label"
				android:textStyle="bold" />
			<View android:id="@+id/divider6" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/brewery_label" />
			<TextView android:id="@+id/brewery" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider6" />

			<TextView android:id="@+id/state_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/brewery" android:layout_marginLeft="5dp"
				android:layout_marginTop="30dp" android:gravity="left"
				android:text="@string/community_beer_state_label" android:textStyle="bold" />
			<View android:id="@+id/divider7" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/state_label" />
			<TextView android:id="@+id/state" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider7" />

			<TextView android:id="@+id/country_label"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/state" android:layout_marginLeft="5dp"
				android:layout_marginTop="30dp" android:gravity="left"
				android:text="@string/community_beer_country_label"
				android:textStyle="bold" />
			<View android:id="@+id/divider8" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/country_label" />
			<TextView android:id="@+id/country" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider8" />

			<LinearLayout android:id="@+id/notes_header"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="horizontal" android:layout_marginLeft="5dp"
				android:gravity="left" android:layout_marginTop="30dp"
				android:layout_below="@+id/country">
				<TextView android:id="@+id/notes_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/community_beer_notes_label"
					android:textStyle="bold" />
				<Button android:id="@+id/translate" android:layout_width="wrap_content"
					android:layout_marginLeft="30dp" android:layout_height="wrap_content"
					android:text="@string/translate_label" android:gravity="center_vertical" />
			</LinearLayout>

			<View android:id="@+id/divider9" android:background="@drawable/divider"
				android:layout_width="fill_parent" android:layout_height="1dp"
				android:layout_below="@+id/notes_header" />
			<TextView android:id="@+id/notes" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp" android:gravity="left"
				android:textSize="22sp" android:layout_below="@+id/divider9" />
		</RelativeLayout>
	</ScrollView>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:gravity="right">
		<ImageView android:id="@+id/community_icon"
			android:layout_width="75dip" android:layout_height="75dip"
			android:src="@drawable/community_button" />
	</RelativeLayout>
</RelativeLayout>
	