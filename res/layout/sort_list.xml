<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_margin="10dp"
		android:layout_height="wrap_content">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<RadioGroup android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:id="@+id/sort_by">
				<RadioButton android:checked="false" android:id="@+id/sort_by_updated"
					android:text="@string/sort_by_updated" />
				<RadioButton android:checked="false" android:id="@+id/sort_by_beer"
					android:text="@string/sort_by_beer" />
				<RadioButton android:checked="false" android:id="@+id/sort_by_style"
					android:text="@string/sort_by_style" />
				<RadioButton android:checked="false" android:id="@+id/sort_by_country"
					android:text="@string/sort_by_country" />
			</RadioGroup>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical"
				android:layout_below="@+id/sort_by" android:layout_margin="10dp">
				<Button android:layout_width="100px" android:layout_height="wrap_content"
					android:text="@string/sort" android:id="@+id/sort_button" />
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>
