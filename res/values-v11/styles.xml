<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BeerCellarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <!-- <item name="android:windowBackground">@drawable/gradient</item> -->
        <item name="android:actionBarStyle">@style/BeerCellarActionBar</item>
        <item name="android:editTextStyle">@style/BeerCellarEditTextTheme</item>
        <item name="android:textColor">@color/text_default</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BeerCellarActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="BeerCellarEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:shadowColor">@color/textview_default</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="BeerCellarActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/BeerCellarActionBarTitleTextStyle</item>
        <item name="android:background">@drawable/beer_yellow</item>
        <!--
             <item name="android:backgroundStacked">@drawable/actionbar_background</item>
        <item name="android:backgroundSplit">@drawable/actionbar_background</item>
        -->
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/BeerCellarActionBarTitleTextStyle</item>
        <item name="background">@drawable/beer_yellow</item>
        <item name="backgroundStacked">@drawable/beer_yellow</item>
        <item name="backgroundSplit">@drawable/beer_yellow</item>
    </style>

    <!-- action bar title text -->
    <style name="BeerCellarActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>